<h1 class="text-black-10">News</h1>
            <div class="row py-3">
                {{#each data}}
                <div class="col">
                    <div class="float-start me-3">
                        <h3 class="date text-white text-center rounded-4 py-1">
                            {{date}}
                        </h3>
                        {{!-- <a href="#" class="ps-0 btn btn-link readmore" onclick="loadData(`news/{{id}}`,'details-template','content')">Read more</a> --}}
                        <a href="?request=news/{{id}}" class="ps-0 btn btn-link readmore">Read more</a>
                    </div>
                <div>
                <h3> {{name}}</h3>
                <p class="text-black-50">{{summary}}</p>
            </div>
            </div>
            {{/each}}
    </div>